@{
    Layout = "~/Views/Shared/_NewLayout.cshtml";

    ViewData["Title"] = "Menu";

    var filename = "/images/banners/banner" + @ViewData["BannerNr"] + ".jpg";

}

<style>
    .centered {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }
</style>


<img src="@filename" alt="Banner" />

<table class="centered">
    <tr>

        <td>
            <a asp-controller="Info" asp-action="ListRaces">
                <img src="~/images/banners/races.png" alt="Alternate Text"/>
            </a>
        </td>
        <td>
            <a asp-controller="Info" asp-action="ListTeams">
                <img src="~/images/banners/teams.png" alt="Alternate Text"/>
            </a>
        </td>
    </tr>
    <tr>
        <td>
            <a asp-controller="Info" asp-action="ListRiders">
                <img src="~/images/banners/riders.png" alt="Alternate Text"/>
            </a>
        </td>
        <td>
            <a asp-controller="Shop" asp-action="OrderTicket">
                <img src="~/images/banners/tickets.png" alt="Alternate Text"/>
            </a>
        </td>
    </tr>
</table>