@model MotoGP.Models.Race
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewData["BannerNr"] = 0;

}



<h1>Race - @Html.DisplayFor(model => model.Name)</h1>
<h2>@Html.DisplayFor(model => model.Date) - @Html.DisplayFor(model => model.Country)</h2>
<img src="/images/races/" + @Html.DisplayFor(model => model.RaceID) + ".jpg"/>
<p>@Html.DisplayFor(model => model.Description)</p>